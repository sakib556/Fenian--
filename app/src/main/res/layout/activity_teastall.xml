<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teastall"
    android:orientation="vertical"
    android:background="#120392">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ফেনীর সেরা দুধ চা"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="34sp"
            android:textColor="#EED7E6"
            android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >
       <ImageView
        android:src="@drawable/teafeni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:scaleType="fitXY"
    />
    </androidx.cardview.widget.CardView>
    <TextView
        android:text="@string/milktea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F7F7F4"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
        <TextView
            android:id="@+id/milkteaweb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সংগৃহীত : https://www.facebook.com/feninews.comlive/videos/782308778625048/"
            android:textSize="18sp"
            android:textColor="#E6CD34"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ফেনীর সেরা রং চা"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="34sp"
            android:textColor="#EED7E6"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:src="@drawable/redtea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:text="@string/redtea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F7F7F4"
            android:textAllCaps="false"
            android:textAlignment="gravity"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/redteaweb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="লোকেশন : https://goo.gl/maps/iPvPA35DeB475Mqs9"
            android:textSize="18sp"
            android:textColor="#E6CD34"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#E69595"
            android:text="(Source:Google)"
            android:textAlignment="center"
            android:layout_margin="2dp"
            />

    </LinearLayout>
    </ScrollView>


</LinearLayout>