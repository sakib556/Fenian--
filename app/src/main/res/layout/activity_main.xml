<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E11F0"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="410dp"
                android:layout_height="90dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/backfeni6" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="স্বাগতম ফেনীয়ান"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#7AF7E9"
                android:textSize="24sp"
                android:textStyle="bold"


                />

            <Button
                android:id="@+id/photos_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="photosbtn"
                android:padding="10dp"
                android:text="ফেনীর কিছু চিত্র"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/touristspot_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="touristspotbtn"
                android:padding="10dp"
                android:text="চলো না ঘুরে আসি"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/institutes_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="institutesbtn"
                android:padding="10dp"
                android:text="জনপ্রিয় কিছু প্রতিষ্ঠান"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/feniemergency_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:drawableRight="@drawable/ic_add_alert_black_24dp"
                android:onClick="feniemergencybtn"
                android:padding="10dp"
                android:text="       ইমার্জেন্সি সার্ভিস সমূহ"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/restaurants_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="restaurantsbtn"
                android:padding="10dp"
                android:text="চমকপ্রদ কিছু রেস্টুরেন্ট"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/blood_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="bloodbtn"
                android:padding="10dp"
                android:text="রক্তের ব্যবস্থা "
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teastall_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="teastallbtn"
                android:padding="10dp"
                android:text="চায়ের চুমুকে ফেনী"
                android:textSize="15sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/aboutfeni_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="aboutfenibtn"
                android:padding="10dp"
                android:text="প্রাণের শহর ফেনী"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/aboutme_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button1"
                android:onClick="aboutmebtn"
                android:padding="10dp"
                android:text="আমি গর্বিত আমি ফেনীয়ান"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="(এই অ্যাপটি আমার দ্বারা ডেভেলপ করা প্রথম অ্যাপ । তাই কোনো প্রকার ভূল হলে তা অবশ্যই ক্ষমার দৃষ্টিতে দেখবেন । ধন্যবাদ । )"
                android:textAlignment="center"
                android:textColor="#D6B4B4"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>